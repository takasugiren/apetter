<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ユーザー編集</h2>
      <%= attachment_image_tag @user, :profile_image, size: "200x200",fallback: "no-image-icon.jpg", class:"effect" %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :profile %>
          <%= f.text_area :profile %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
